<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="textEditor.controller.FriendsController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Friends">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Separator prefWidth="200.0"/>
                <Label text="Friends list">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <ListView fx:id="friendsListView" prefHeight="200.0" prefWidth="200.0"/>
                <Button fx:id="removeButton" alignment="CENTER" mnemonicParsing="false" text="Remove"
                        textAlignment="CENTER"/>
                <Separator prefWidth="200.0"/>
                <Label text="Add new friend">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" prefHeight="18.0" prefWidth="380.0" spacing="8.0">
                    <children>
                        <Label alignment="CENTER" text="Nickname:"/>
                        <TextField fx:id="usernameField"/>
                        <Button fx:id="addButton" mnemonicParsing="false" text="Add"/>
                    </children>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0"/>
                <Separator prefWidth="200.0"/>
                <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="backButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT"
                                mnemonicParsing="false" text="Back"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
