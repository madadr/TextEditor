<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="textEditor.controller.ProjectController">
    <top>
        <Label text="Pick project" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </top>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="newButton" mnemonicParsing="false" text="New">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
                <Button fx:id="editButton" mnemonicParsing="false" text="Edit">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            <Separator orientation="VERTICAL" />
                <Button fx:id="openButton" mnemonicParsing="false" text="Open">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
    <center>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="299.0" prefWidth="255.0">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Description:">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Separator />
                                <ScrollPane prefHeight="299.0" prefWidth="250.0">
                                    <content>
                                        <Label fx:id="description" alignment="TOP_LEFT" prefWidth="245.0" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                  <Separator prefWidth="200.0" visible="false">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Separator>
                        <VBox>
                            <children>
                                <Label text="Contributors">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Separator />
                                <ScrollPane prefHeight="299.0" prefWidth="250.0">
                                    <content>
                                        <Label fx:id="contributors" alignment="TOP_LEFT" prefWidth="245.0" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <ListView fx:id="projectList" maxWidth="320.0" minWidth="250.0" prefHeight="305.0" prefWidth="320.0" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </center>
</BorderPane>
